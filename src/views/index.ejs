<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>

    <p><a href="/api/books/create/"><button>CREATE</button></a></p>

    <table width="100%" border="1">
       
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Update</th>
        <th>Count pages</th>
        <th>Delete</th>
      </tr>
       
      <% for (i = 0; i < data.length; i++) { %>
        <tr>
          <th>  <%= i+1 %> </th>
          <td>  <%= data[i].name  %> </td>
          <td>  
            <a href='/api/books/update/<%= data[i]._id%>'>update</a>
          </td>
          <td>  <%= data[i].pages %> </td>
          <td> 
            <form method="POST" action="/api/books/<%=data[i]._id %>?_method=DELETE">
              <input type="hidden" name="_method" value="DELETE">
              <input type="hidden" name="id" value="<%=data[i]._id %>">
              <input type="submit" value="delete"/>
            </form>
          </td> 
        </tr>
      <% } %>
      
    </table>

</body>
